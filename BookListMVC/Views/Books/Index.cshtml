
@{ 
    ViewData["Title"] = "Index";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="test-info">Book List</h2>
    </div>
    <div>
        <a asp-action="Upsert" asp-controller="Books" class="btn btn-info from-control text-white">
            Add New Book
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts{ 
<script src="~/js/bookList.js"></script>
}